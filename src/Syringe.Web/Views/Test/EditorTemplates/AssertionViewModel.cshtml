@model AssertionViewModel

<div class="group">
    <div class="form-group">
        @Html.LabelFor(x => Model.Description, new { @class = "control-label col-sm-2" })

        <div class="col-sm-2">
            @Html.TextBoxFor(x => Model.Description, new { @class = "form-control", placeholder = "Description" })
        </div>

        @Html.LabelFor(x => Model.AssertionType, new { @class = "control-label col-sm-2" })
        <div class="col-sm-2">
            @Html.EnumDropDownListFor(x => Model.AssertionType, new { @class = "form-control", placeholder = "Assertion type" })
        </div>

        @Html.LabelFor(x => Model.AssertionMethod, new { @class = "control-label col-sm-2" })
        <div class="col-sm-2">
            @Html.EnumDropDownListFor(x => Model.AssertionMethod, new { @class = "form-control", placeholder = "Assertion method" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => Model.Value, new { @class = "control-label col-sm-2" })
        <div class="col-sm-9">
            @Html.TextBoxFor(x => Model.Value, new { @class = "form-control variable-compatible", placeholder = "Value", autocomplete="off" })
        </div>
        <div class="col-sm-1">
            @Html.Partial("Partials/_RemoveRow")
        </div>
    </div>
</div>