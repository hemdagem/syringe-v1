@model TestFileViewModel
@{
    ViewBag.Title = "Add test";
}
<div class="container" id="edit-test">
    <div class="row">

        <ul class="breadcrumb">
            <li><a title="View" href="@Url.Action("Index", "Home", new {pageNumber = ViewBag.PageNumber, noOfResults = ViewBag.NoOfResults})">Test Files</a></li>
            <li>Add</li>
        </ul>

        <form action="@(Request.RawUrl)" method="post" class="form-horizontal">
            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">General</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(x => x.Filename, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(x => x.Filename, new { @class = "form-control", placeholder = "Enter Filename" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <h3 class="panel-title  pull-left">Variables</h3>
                    <button type="submit" class="btn btn-primary btn-sm pull-right" id="addVariableItem">
                        <i class="material-icons">add</i>
                    </button>
                </div>
                <div class="panel-body">
                    <div class="component">
                        @Html.EditorFor(x => x.Variables)
                    </div>
                </div>
            </div>

            <div class="pull-right">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
