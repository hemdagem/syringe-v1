@model TestFile

<h2>Reorder tests for @Model.Filename</h2>
<ul class="list-group" id="reorderedTestsList">
    @for (int i = 0; i < Model.Tests.Count(); i++)
    {
        <li class="list-group-item" data-original="@i"><span class="drag-handle">&#9776;</span>@Model.Tests.ElementAtOrDefault(i).Description</li>
    }

</ul>

<button id="saveOrder" class="btn btn-primary" data-filename="@Model.Filename">Save</button>
<button id="cancelOrder"  class="btn btn-default" data-dismiss="modal">Cancel</button>
