@using Syringe.Core.Security
@using Syringe.Web.Extensions.HtmlHelpers
@using Syringe.Web.Extensions.UrlHelpers
@{
    var userContext = UserContext.GetFromFormsAuth(this.Context);
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Syringe</title>
    <link href="@Url.GetCacheBuster("~/Css/Syringe.css")" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:300,400,500,700" type="text/css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand" href="/">
                    Syringe
                </a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="@Html.Active("Index", "Home")"><a href="/">Home <span class="sr-only">(current)</span></a></li>
                    <li class="@Html.Active("Index", "Results")">@Html.ActionLink("All results", "Index", "Results")</li>
                    <li class="@Html.Active("Today", "Results")">@Html.ActionLink("Today's results", "Today", "Results")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (!userContext.IsGuest)
                    {
                        <li class="dropdown @Html.Active("Login", "Authentication")">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">@(userContext.FullName)<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="@Url.Action("Logout", "Authentication")">Logout</a></li>
                            </ul>
                        </li>
                    }
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">System<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("EncryptData", "System")">Encrypt data</a></li>
                            <li><a href="@Url.Action("Settings", "System")">Settings</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="https://syringe.readthedocs.io" target="_blank">Help</a>
                    </li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    @RenderBody()
    <script src="@Url.GetCacheBuster("~/Scripts/jquery-1.11.3.min.js")"></script>
    <script src="@Url.GetCacheBuster("~/Scripts/jquery-ui.1.11.4.min.js")"></script>
    <script src="@Url.GetCacheBuster("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.GetCacheBuster("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
    <script src="@Url.GetCacheBuster("~/Scripts/jquery.textcomplete-1.6.1.min.js")"></script>
    <script src="@Url.GetCacheBuster("~/Scripts/jquery.overlay-0.0.5.min.js")"></script>
    <script src="@Url.GetCacheBuster("~/Scripts/jquery.tag-it.2.0.0.min.js")"></script>
    <script src="@Url.GetCacheBuster("~/Scripts/sortable-1.4.2.min.js")"></script>
    <script src="@Url.GetCacheBuster("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.GetCacheBuster("~/Scripts/material.js")"></script>
    <script src="@Url.GetCacheBuster("~/Scripts/ripples.js")"></script>
    <script src="@Url.GetCacheBuster("~/Scripts/bootbox.min.js")"></script>
    <script src="@Url.GetCacheBuster("~/Scripts/clipboard.min.js")"></script>
    <script src="@Url.GetCacheBuster("~/Scripts/Syringe.js")"></script>

    <script>
        $.material.init();
        $.material.ripples();
        cheet('↑ ↑ ↓ ↓ ← → ← → b a', function () {
            window.open("/img/kmi.jpg");
        });
    </script>
    @RenderSection("Scripts", false)
</body>
</html>